        android:theme="@style/AppTheme">

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Equips"
            android:label="@string/title_activity_equips"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AfegirEquip"
            android:label="@string/title_activity_afegir_equip"
            android:parentActivityName=".Equips"
            android:noHistory="true"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AnadirPartido"
            android:label="@string/title_activity_anadir_partido"
            android:parentActivityName=".visualizadoras.JornadaActivity"
            android:noHistory="true"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".visualizadoras.JornadaActivity"
            android:label="@string/title_activity_jornada"
            android:parentActivityName=".Jornadas"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Jornadas"
            android:label="@string/title_activity_jornadas"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AfegirJornada"
            android:label="@string/title_activity_afegir_jornada"
            android:noHistory="true"
            android:parentActivityName=".Jornadas"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Classificacio"
            android:label="@string/title_activity_classificacio"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Jugadors"
            android:label="@string/title_activity_jugadors"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".visualizadoras.EquipViewer"
            android:label="@string/title_activity_equip_viewer"
            android:parentActivityName=".Equips"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".GalleryActivity"
            android:label="@string/title_activity_gallery"
            android:noHistory="true"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AboutActivity"
            android:label="@string/title_activity_about"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AjudaActivity"
            android:label="@string/title_activity_ajuda"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>